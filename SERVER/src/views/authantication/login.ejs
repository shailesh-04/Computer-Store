<%- include('./_start.ejs',{title:"Radhe Computer Login"}) %>

    <div class="h-screen flex justify-center items-center">
        <form method="POST" action="/api/auth/login" class="bg-white p-6 rounded shadow w-80">
            <h2 class="text-xl font-bold mb-4">Login</h2>

            <input name="email" type="email" placeholder="Email" class="w-full mb-3 p-2 border rounded" />

            <input name="password" type="password" placeholder="Password" class="w-full mb-3 p-2 border rounded" />

            <button class="w-full bg-blue-600 text-white py-2 rounded">
                Login
            </button>
        </form>

    </div>

    <% include("_end.ejs") %>